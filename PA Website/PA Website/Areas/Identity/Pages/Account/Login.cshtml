@page
@model LoginModel

@{
    ViewData["Title"] = "Вход в системата";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .login-container {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: calc(100vh - 80px);
            display: flex;
            align-items: center;
            padding: 3rem 0;
        }

        .login-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            background: white;
            max-width: 800px;
            margin: 0 auto;
        }

            .login-card:before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 5px;
                background: linear-gradient(90deg, #007bff, #00bfff);
            }

        .login-header {
            padding: 2rem;
            text-align: center;
            background: white;
        }

        .login-title {
            font-family: 'Playfair Display', serif;
            color: #007bff;
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 1rem;
            position: relative;
        }

            .login-title:after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 4px;
                background: linear-gradient(90deg, #007bff, #00bfff);
                border-radius: 2px;
            }

        .login-subtitle {
            color: #6c757d;
            margin-bottom: 0;
        }

        .login-body {
            padding: 2rem;
        }

        .form-floating label {
            color: #495057;
        }

        .form-control {
            border-radius: 8px;
            padding: 1rem;
            border: 1px solid #ced4da;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
            }

        .btn-login {
            background: linear-gradient(135deg, #007bff, #00bfff);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 24px;
            font-size: 1rem;
            font-weight: 600;
            transition: all 0.3s;
            width: 100%;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
            }

        .login-links {
            margin-top: 1.5rem;
            text-align: center;
        }

            .login-links a {
                color: #007bff;
                text-decoration: none;
                transition: all 0.2s;
                display: inline-block;
                margin: 0 10px;
            }

                .login-links a:hover {
                    color: #0056b3;
                    transform: translateY(-1px);
                }

        .divider {
            display: flex;
            align-items: center;
            margin: 1.5rem 0;
        }

            .divider:before, .divider:after {
                content: '';
                flex: 1;
                border-bottom: 1px solid #dee2e6;
            }

        .divider-text {
            padding: 0 10px;
            color: #6c757d;
            font-size: 0.9rem;
        }

        .external-login .btn {
            margin: 5px;
            border-radius: 25px;
            padding: 10px 20px;
            font-weight: 500;
        }

        .external-login .btn-primary {
            background: linear-gradient(135deg, #4285F4, #34A853);
        }

        @@media (max-width: 768px) {
            .login-header {
                padding: 1.5rem;
            }

            .login-body {
                padding: 1.5rem;
            }

            .login-title {
                font-size: 1.8rem;
            }
        }
    </style>
}

<div class="login-container">
    <div class="container">
        <div class="login-card">
            <div class="login-header">
                <h1 class="login-title">Вход в системата</h1>
                <p class="login-subtitle">Моля, въведете вашите данни за вход</p>
            </div>

            <div class="login-body">
                <div class="row">
                    <div class="col-md-6">
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Имейл адрес</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="парола" />
                                <label asp-for="Input.Password">Парола</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3 form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">Запомни ме</label>
                            </div>

                            <button id="login-submit" type="submit" class="btn btn-login mb-3">
                                <i class="fas fa-sign-in-alt me-2"></i>Вход
                            </button>

                            <div class="login-links">
                                <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола?</a>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Изпрати потвърждение</a>
                            </div>
                        </form>
                    </div>

                    <div class="col-md-6">
                        <div class="divider">
                            <span class="divider-text">ИЛИ</span>
                        </div>

                        <h4 class="text-center mb-3">Вход чрез</h4>

                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div class="alert alert-info">
                                    Няма конфигурирани външни услуги за удостоверяване.
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="external-login text-center">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Вход с @provider.DisplayName">
                                                <i class="fab fa-@provider.DisplayName.ToLower() me-2"></i>@provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}