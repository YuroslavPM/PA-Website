@section Scripts {
    <script>
        $(document).ready(function() {
            // Testimonials carousel
            let currentSlide = 0;
            const slides = $('.testimonial-slide');
            const dots = $('.testimonial-dot');
            const totalSlides = slides.length;

            function showSlide(index) {
                slides.removeClass('active').addClass('hidden');
                dots.removeClass('active bg-primary').addClass('bg-gray-300');

                slides.eq(index).removeClass('hidden').addClass('active');
                dots.eq(index).removeClass('bg-gray-300').addClass('active bg-primary');
            }

            function nextSlide() {
                currentSlide = (currentSlide + 1) % totalSlides;
                showSlide(currentSlide);
            }

            function prevSlide() {
                currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
                showSlide(currentSlide);
            }

            // Event listeners
            $('#nextBtn').click(nextSlide);
            $('#prevBtn').click(prevSlide);

            dots.click(function() {
                currentSlide = $(this).data('slide');
                showSlide(currentSlide);
            });

            // Auto-advance slides
            setInterval(nextSlide, 7000);

            // Newsletter form submission
            $('#newsletterForm').on('submit', function(e) {
                e.preventDefault();
                
                const email = $('#newsletterEmail').val();
                const submitBtn = $('#newsletterSubmitBtn');
                const originalText = submitBtn.find('span').text();
                
                // Show loading state
                submitBtn.prop('disabled', true);
                submitBtn.find('span').text('Изпраща...');
                submitBtn.find('i').removeClass('fa-paper-plane').addClass('fa-spinner fa-spin');
                
                // Get anti-forgery token
                const token = $('input[name="__RequestVerificationToken"]').val();
                
                $.ajax({
                    url: '/Newsletter/Subscribe',
                    type: 'POST',
                    data: {
                        email: email,
                        __RequestVerificationToken: token
                    },
                    success: function(response) {
                        if (response.success) {
                            $('#newsletterModalMessage').text(response.message);
                            showNewsletterModal();
                            $('#newsletterForm')[0].reset();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Възникна грешка при абонирането. Моля, опитайте отново.');
                    },
                    complete: function() {
                        // Reset button state
                        submitBtn.prop('disabled', false);
                        submitBtn.find('span').text(originalText);
                        submitBtn.find('i').removeClass('fa-spinner fa-spin').addClass('fa-paper-plane');
                    }
                });
            });

            // Generate random stars
            function createStars() {
                const starsContainer = document.getElementById('floating-elements');
                for (let i = 0; i < 20; i++) {
                    const star = document.createElement('div');
                    star.className = 'star';
                    const size = Math.random() * 4 + 3;
                    const posX = Math.random() * 100;
                    const posY = Math.random() * 100;
                    const delay = Math.random() * 5;
                    const duration = Math.random() * 10 + 5;

                    star.style.cssText = `
                        width: ${size}px;
                        height: ${size}px;
                        left: ${posX}%;
                        top: ${posY}%;
                        animation-delay: ${delay}s;
                        animation-duration: ${duration}s;
                    `;

                    starsContainer.appendChild(star);
                }
            }

            createStars();

            // Smooth scrolling for anchor links
            $('a[href^="#"]').on('click', function(event) {
                const target = $($(this).attr('href'));
                if (target.length) {
                    event.preventDefault();
                    $('html, body').animate({
                        scrollTop: target.offset().top - 80
                    }, 800);
                }
            });

            // Intersection Observer for animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in-up');
                    }
                });
            }, observerOptions);

            // Observe elements for animation
            const animatedElements = document.querySelectorAll('.animate-on-scroll');
            animatedElements.forEach(el => observer.observe(el));
        });

        // Newsletter modal functions
        function showNewsletterModal() {
            document.getElementById('newsletterModal').style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeNewsletterModal() {
            document.getElementById('newsletterModal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('newsletterModal');
            if (event.target === modal) {
                closeNewsletterModal();
            }
        }
    </script>
