@using Microsoft.AspNetCore.Identity
@model IEnumerable<PA_Website.Models.Article>
@{
    ViewData["Title"] = "Начало";
    Layout = "_Layout";

}

@section Styles {
    <style>
        /* Основни стилове */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            color: #333;
            padding-top: 0;
            overflow-x: hidden;
        }

        .playfair {
            font-family: 'Playfair Display', serif;
        }

        /* Hero секция */
        .hero {
            background: linear-gradient(rgba(74, 14, 120, 0.85), rgba(106, 48, 147, 0.85)), url('../Images/psy.png') no-repeat center center;
            background-size: cover;
            background-attachment: fixed;
            height: 100vh;
            min-height: 700px;
            position: relative;
            color: white;
            display: flex;
            align-items: center;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.6);
            margin-top: -80px;
            padding-top: 80px;
            clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
        }

        .hero-content {
            position: relative;
            z-index: 2;
            animation: fadeInUp 1.2s ease-out;
        }

        .hero-title {
            font-size: 4.2rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            line-height: 1.2;
            animation: textFadeIn 1.5s ease-out;
            background: linear-gradient(45deg, #fff, #e0e0e0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: none;
        }

        .hero-subtitle {
            font-size: 1.8rem;
            margin-bottom: 2.5rem;
            opacity: 0.95;
            animation: textFadeIn 1.8s ease-out;
            font-weight: 300;
            letter-spacing: 1px;
        }

        /* Бутон с ефекти */
        .hero-btn {
            background: linear-gradient(135deg, #6a3093 0%, #4a0e78 100%);
            border: none;
            padding: 18px 40px;
            font-size: 1.3rem;
            border-radius: 50px;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
            color: white;
            position: relative;
            overflow: hidden;
            z-index: 1;
            display: inline-flex;
            align-items: center;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 500;
        }

            .hero-btn:before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, #4a0e78 0%, #6a3093 100%);
                z-index: -1;
                opacity: 0;
                transition: opacity 0.4s ease;
            }

            .hero-btn:hover {
                transform: translateY(-5px) scale(1.05);
                box-shadow: 0 15px 35px rgba(0,0,0,0.4);
            }

                .hero-btn:hover:before {
                    opacity: 1;
                }

            .hero-btn:active {
                transform: translateY(-2px);
                box-shadow: 0 10px 30px rgba(0,0,0,0.4);
            }

            .hero-btn i {
                margin-right: 12px;
                transition: transform 0.3s ease;
                font-size: 1.2rem;
            }

            .hero-btn:hover i {
                transform: translateY(-3px) rotate(360deg);
            }

        /* Floating елементи */
        .floating-elements {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .star {
            position: absolute;
            background: rgba(255,255,255,0.9);
            border-radius: 50%;
            animation: float 7s infinite linear;
            box-shadow: 0 0 10px rgba(255,255,255,0.5);
        }

        /* Секции */
        .section {
            padding: 8rem 0;
            position: relative;
        }

        .section-title {
            font-size: 3.2rem;
            margin-bottom: 4rem;
            position: relative;
            display: inline-block;
            color: #4a0e78;
        }

            .section-title:after {
                content: '';
                position: absolute;
                bottom: -20px;
                left: 50%;
                transform: translateX(-50%);
                width: 120px;
                height: 6px;
                background: linear-gradient(90deg, #4a0e78, #6a3093);
                border-radius: 3px;
            }

        .bg-purple-light {
            background: linear-gradient(135deg, rgba(106, 48, 147, 0.08) 0%, rgba(74, 14, 120, 0.08) 100%);
        }

        /* Картички */
        .service-card {
            border: none;
            border-radius: 25px;
            overflow: hidden;
            transition: all 0.5s;
            box-shadow: 0 20px 50px rgba(0,0,0,0.15);
            height: 100%;
            background: white;
            position: relative;
        }

            .service-card:hover {
                transform: translateY(-15px) scale(1.02);
                box-shadow: 0 25px 60px rgba(0,0,0,0.25);
            }

            .service-card img {
                height: 320px;
                object-fit: cover;
                transition: transform 0.8s;
            }

            .service-card:hover img {
                transform: scale(1.1);
            }

            .service-card .card-body {
                padding: 3rem;
            }

            .service-card .card-title {
                font-size: 2rem;
                margin-bottom: 1.5rem;
                color: #4a0e78;
                font-weight: 600;
            }

            .service-card .card-text {
                font-size: 1.1rem;
                line-height: 1.8;
                color: #666;
            }

            .service-card .btn {
                background: linear-gradient(135deg, #4a0e78, #6a3093);
                border: none;
                border-radius: 50px;
                padding: 12px 35px;
                font-weight: 500;
                letter-spacing: 1px;
                transition: all 0.4s;
                font-size: 1.1rem;
            }

                .service-card .btn:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 10px 25px rgba(74, 14, 120, 0.4);
                }

        /* Автор секция */
        .author-section {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            padding: 8rem 0;
            position: relative;
            overflow: hidden;
        }

        .author-section:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%236a3093' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            opacity: 0.5;
        }

        .author-image {
            width: 380px;
            height: 380px;
            border-radius: 50%;
            object-fit: cover;
            border: 15px solid white;
            box-shadow: 0 25px 60px rgba(0,0,0,0.2);
            transition: all 0.6s;
            position: relative;
            z-index: 2;
        }

            .author-image:hover {
                transform: scale(1.08) rotate(5deg);
                box-shadow: 0 30px 70px rgba(0,0,0,0.3);
            }

        .author-quote {
            font-style: italic;
            font-size: 1.5rem;
            color: #4a0e78;
            position: relative;
            padding: 2.5rem;
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.1);
            line-height: 1.8;
            margin-top: 2rem;
        }

            .author-quote:before {
                content: '"';
                font-size: 6rem;
                position: absolute;
                top: -30px;
                left: 20px;
                color: rgba(106, 48, 147, 0.1);
                font-family: serif;
                line-height: 1;
            }

        /* Анимации */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(60px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes textFadeIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes float {
            0% {
                transform: translateY(0) rotate(0deg);
                opacity: 0;
            }

            10% {
                opacity: 1;
            }

            90% {
                opacity: 1;
            }

            100% {
                transform: translateY(-100vh) rotate(360deg);
                opacity: 0;
            }
        }

        .animate {
            opacity: 0;
            animation: fadeInUp 1.2s ease-out forwards;
        }

        .delay-1 {
            animation-delay: 0.4s;
        }

        .delay-2 {
            animation-delay: 0.8s;
        }

        /* Статии секция */
        .articles-section {
            padding: 8rem 0;
            background: white;
            position: relative;
        }

        .article-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.5s;
            box-shadow: 0 15px 40px rgba(0,0,0,0.1);
            height: 100%;
            margin-bottom: 2rem;
            background: white;
        }

            .article-card:hover {
                transform: translateY(-12px);
                box-shadow: 0 20px 50px rgba(0,0,0,0.2);
            }

            .article-card img {
                height: 250px;
                object-fit: cover;
                width: 100%;
                transition: transform 0.7s;
            }

            .article-card:hover img {
                transform: scale(1.1);
            }

            .article-card .card-body {
                padding: 2rem;
            }

            .article-card .card-title {
                font-family: 'Playfair Display', serif;
                color: #4a0e78;
                margin-bottom: 1rem;
                font-size: 1.5rem;
                font-weight: 600;
            }

            .article-card .card-text {
                color: #666;
                margin-bottom: 1.5rem;
                line-height: 1.7;
            }

            .article-card .btn {
                background: linear-gradient(135deg, #4a0e78, #6a3093);
                border: none;
                border-radius: 50px;
                padding: 10px 25px;
                font-size: 1rem;
                transition: all 0.3s;
            }

                .article-card .btn:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 8px 20px rgba(74, 14, 120, 0.3);
                }

        /* Отзиви секция */
        .testimonials-section {
            padding: 8rem 0;
            background: linear-gradient(135deg, rgba(106, 48, 147, 0.08) 0%, rgba(74, 14, 120, 0.08) 100%);
            position: relative;
        }

        .testimonial-card {
            background: white;
            border-radius: 20px;
            padding: 3rem;
            box-shadow: 0 15px 40px rgba(0,0,0,0.1);
            margin: 1rem;
            height: 100%;
            transition: all 0.4s;
        }

        .testimonial-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.15);
        }

        .testimonial-text {
            font-style: italic;
            color: #555;
            position: relative;
            padding: 0 1.5rem;
            font-size: 1.2rem;
            line-height: 1.8;
        }

            .testimonial-text:before,
            .testimonial-text:after {
                content: '"';
                font-size: 4rem;
                color: rgba(106, 48, 147, 0.2);
                position: absolute;
            }

            .testimonial-text:before {
                top: -30px;
                left: -15px;
            }

            .testimonial-text:after {
                bottom: -50px;
                right: -15px;
            }

        .testimonial-author {
            margin-top: 2.5rem;
            font-weight: 600;
            color: #4a0e78;
            font-size: 1.2rem;
        }

        .testimonial-role {
            color: #777;
            font-size: 1rem;
            margin-top: 0.5rem;
        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 5%;
            color: #4a0e78;
            opacity: 0.8;
            transition: all 0.3s;
        }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            opacity: 1;
            transform: scale(1.1);
        }

        .carousel-indicators button {
            background-color: #6a3093;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin: 0 8px;
            transition: all 0.3s;
        }

        .carousel-indicators button.active {
            transform: scale(1.3);
        }

        .testimonial-rating {
            font-size: 1.4rem;
            color: #ffc107;
            margin-bottom: 1.5rem;
        }

            .testimonial-rating .text-muted {
                opacity: 0.5;
            }

        /* Responsive */
        @@media (max-width: 1200px) {
            .hero-title {
                font-size: 3.5rem;
            }
            
            .section-title {
                font-size: 2.8rem;
            }
        }

        @@media (max-width: 992px) {
            .hero-title {
                font-size: 3rem;
            }

            .hero-subtitle {
                font-size: 1.5rem;
            }

            .section {
                padding: 6rem 0;
            }

            .author-image {
                width: 300px;
                height: 300px;
            }
        }

        @@media (max-width: 768px) {
            .hero {
                height: 85vh;
                min-height: 600px;
                clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.3rem;
            }

            .section-title {
                font-size: 2.2rem;
            }

            .author-image {
                width: 250px;
                height: 250px;
                margin-bottom: 2rem;
            }

            .service-card .card-body {
                padding: 2rem;
            }

            .testimonial-card {
                padding: 2rem;
            }
        }

        @@media (max-width: 576px) {
            .hero {
                height: 75vh;
                min-height: 500px;
            }

            .hero-title {
                font-size: 2rem;
            }

            .hero-btn {
                padding: 15px 30px;
                font-size: 1.1rem;
            }

            .section-title {
                font-size: 1.8rem;
            }

            .author-image {
                width: 200px;
                height: 200px;
            }

            .testimonial-text {
                font-size: 1.1rem;
            }
        }
    </style>
}

<header class="hero">
    <div class="floating-elements">
        @* звезди *@
        @for (var i = 0; i < 15; i++)
        {
            <div class="star" style="
                width: @(new Random().Next(3, 7))px;
                height: @(new Random().Next(3, 7))px;
                left: @(new Random().Next(0, 100))%;
                top: @(new Random().Next(0, 100))%;
                animation-delay: @(new Random().Next(0, 5))s;
                animation-duration: @(new Random().Next(5, 15))s;
                        "></div>
        }
    </div>
    <div class="container text-center hero-content">
        <h1 class="hero-title playfair">Добре дошли в Душевна Музайка</h1>
        <p class="hero-subtitle">Вашето място за хороскопи и психология</p>
        <a href="#services" class="btn hero-btn animate delay-1">
            <i class="fas fa-chevron-down"></i> Разгледайте услугите ни
        </a>
    </div>
</header>

<main>
    <!-- За нас секция -->
    <section class="section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0 animate">
                    <img src="https://www.explorepsychology.com/wp-content/uploads/2021/09/personality-psych2.png"
                         alt="Psychology illustration"
                         class="img-fluid rounded shadow-lg">
                </div>
                <div class="col-lg-6 animate delay-1">
                    <h2 class="section-title playfair text-center text-lg-start">Кои сме ние?</h2>
                    <p class="lead">
                        Добре дошли в Душевна Мозайка!
                    </p>
                    <p>
                        Тук всяко парченце от вътрешния ви свят намира своето място.
                    </p>
                    <p>
                        Предлагам астрологически и психологически консултации, които да ви помогнат да разберете по-добре себе си, емоциите си и житейския си път.
                    </p>
                    <p>
                        ✨  Индивидуален подход<br>
                        ✨   Комбинирани сесии - астрология и психология<br>
                        ✨   Индивидуални психологически консултации<br>
                        ✨  Подкрепа в моменти на промяна, търсене и осъзнаване
                    </p>
                    <p>
                        Открийте хармонията в себе си. Вашата душа е уникална мозайка – нека я подредим заедно.
                    </p>
                </div>
            </div>
        </div>
    </section>
    <!-- Секция с последни статии -->
    <section class="articles-section">
        <div class="container">
            <h2 class="section-title playfair text-center">Последни статии</h2>

            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var article in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="article-card h-100">
                                <img src="@article.ImagePath"
                                     class="card-img-top"
                                     alt="@article.Title">
                                <div class="card-body">
                                    <h5 class="card-title">@article.Title</h5>
                                    @* <p class="card-text">@GetShortDescription(article.Description, 100)</p> *@
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="far fa-calendar-alt me-1"></i>
                                            @article.PublicationDate.ToString("dd.MM.yyyy")
                                        </small>
                                        <a href="@Url.Action("Details", "Articles", new { id = article.Id })"
                                           class="btn btn-sm btn-primary">
                                            Прочети
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Articles")" class="btn btn-outline-primary">
                        Виж всички статии <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    Все още няма публикувани статии.
                </div>
            }
        </div>
    </section>

    <!-- Услуги секция -->
    <section id="services" class="section bg-purple-light">
        <div class="container">
            <h2 class="section-title playfair text-center">Нашите услуги</h2>
            <div class="row g-4">
                <div class="col-md-6 animate">
                    <div class="service-card">
                        <img src="https://cdn.knd.ro/media/521/2863/1682/20227288/1/horoscop-2-iunie-2022.jpeg"
                             class="card-img-top"
                             alt="Хороскопи">
                        <div class="card-body text-center">
                            <h3 class="card-title playfair">Хороскопи</h3>
                            <p class="card-text">
                                Персонализирани хороскопи, базирани на точната ви дата, час и място на раждане. Разберете как звездите
                                влияят на вашия характер, взаимоотношения и житейски път.
                            </p>
                            <a href='@Url.Action("Index", "Services")' class="btn btn-primary">Прочети хороскоп</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 animate delay-1">
                    <div class="service-card">
                        <img src="https://www.ollusa.edu/blog/_resources/top-10-psychologist-skills-you-must-have.png"
                             class="card-img-top"
                             alt="Психологически консултации">
                        <div class="card-body text-center">
                            <h3 class="card-title playfair">Психологически консултации</h3>
                            <p class="card-text">
                                Индивидуални сесии с опитни психолози, които ще ви помогнат да се справите с ежедневни предизвикателства,
                                стресови ситуации и да подобрите качеството на живота си.
                            </p>
                            <a href='@Url.Action("Index", "Services")' class="btn btn-primary">Запази час</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Автор секция -->
    <section class="section author-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 text-center mb-5 mb-md-0 animate">
                    <img src="https://scontent.fsof9-1.fna.fbcdn.net/v/t39.30808-6/492612847_24008185045446073_5271774732973390534_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=127cfc&_nc_ohc=mzyHF-4ev7QQ7kNvwFVJIWe&_nc_oc=Adnp1J2KT7Ne39rlmklJUKP4mD2LeCKGs2ehRNVl4kaEUZq67EuPo7fBAILunfVnmO1w36JCLxTwesjiGN2t_XY9&_nc_zt=23&_nc_ht=scontent.fsof9-1.fna&_nc_gid=j9SfbrISeE5I78raYQLpTA&oh=00_AfH4b9nhbYHz5_KQuDwlAgY_arAJ1UurMdZSB6fSH2OM6Q&oe=681D0AAA"
                         alt="Авторът"
                         class="author-image">
                </div>
                <div class="col-md-8 text-center mb-5 mb-md-0 animate delay-1">
                    <h2 class="section-title playfair">За автора</h2>
                    <p>
                        Аз съм Мариела Разпопова и съм създател на Душевна Мозайка. Пътят ми започна с астропсихологията през 2019-та година – тя отвори врата към ново разбиране за човека и душата. Именно тя ме отведе и към психологията, където припознах своето истинско призвание. Завърших магистратура по Приложна психология и базов курс по Позитивна психотерапия, а днес съм тук – за да бъда с теб в процеса на осъзнаване, промяна и вътрешна хармония.
                    </p>
                </div>
            </div>
        </div>
    </section>


    <!-- Секция с отзиви -->
    <section class="testimonials-section">
        <div class="container">
