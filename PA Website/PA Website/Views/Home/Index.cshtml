@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Начало";
    Layout = "_Layout";
}

@section Styles {
    <style>
        /* Основни стилове */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            color: #333;
            padding-top: 0;
            overflow-x: hidden;
        }

        .playfair {
            font-family: 'Playfair Display', serif;
        }

        /* Hero секция */
        .hero {
            background: linear-gradient(rgba(74, 14, 120, 0.7), rgba(106, 48, 147, 0.7)), url('/Images/psy.png') no-repeat center center;
            background-size: cover;
            background-attachment: fixed;
            height: 90vh;
            min-height: 650px;
            position: relative;
            color: white;
            display: flex;
            align-items: center;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.6);
            margin-top: -80px;
            padding-top: 80px;
            clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
        }

        .hero-content {
            position: relative;
            z-index: 2;
            animation: fadeInUp 1s ease-out;
        }

        .hero-title {
            font-size: 3.8rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            line-height: 1.2;
            animation: textFadeIn 1.5s ease-out;
        }

        .hero-subtitle {
            font-size: 1.6rem;
            margin-bottom: 2.5rem;
            opacity: 0.9;
            animation: textFadeIn 1.8s ease-out;
        }

        /* Бутон с ефекти */
        .hero-btn {
            background: linear-gradient(135deg, #6a3093 0%, #4a0e78 100%);
            border: none;
            padding: 15px 35px;
            font-size: 1.2rem;
            border-radius: 50px;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 5px 20px rgba(0,0,0,0.3);
            color: white;
            position: relative;
            overflow: hidden;
            z-index: 1;
            display: inline-flex;
            align-items: center;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 500;
        }

            .hero-btn:before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, #4a0e78 0%, #6a3093 100%);
                z-index: -1;
                opacity: 0;
                transition: opacity 0.4s ease;
            }

            .hero-btn:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0,0,0,0.4);
            }

                .hero-btn:hover:before {
                    opacity: 1;
                }

            .hero-btn:active {
                transform: translateY(-2px);
                box-shadow: 0 7px 25px rgba(0,0,0,0.4);
            }

            .hero-btn i {
                margin-right: 10px;
                transition: transform 0.3s ease;
            }

            .hero-btn:hover i {
                transform: translateY(-3px);
            }

        /* Floating елементи */
        .floating-elements {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .star {
            position: absolute;
            background: rgba(255,255,255,0.8);
            border-radius: 50%;
            animation: float 7s infinite linear;
        }

        /* Секции */
        .section {
            padding: 7rem 0;
            position: relative;
        }

        .section-title {
            font-size: 2.8rem;
            margin-bottom: 3.5rem;
            position: relative;
            display: inline-block;
        }

            .section-title:after {
                content: '';
                position: absolute;
                bottom: -15px;
                left: 50%;
                transform: translateX(-50%);
                width: 100px;
                height: 5px;
                background: linear-gradient(90deg, #4a0e78, #6a3093);
                border-radius: 3px;
            }

        .bg-purple-light {
            background-color: rgba(106, 48, 147, 0.05);
        }

        /* Картички */
        .service-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.4s;
            box-shadow: 0 15px 40px rgba(0,0,0,0.12);
            height: 100%;
            background: white;
        }

            .service-card:hover {
                transform: translateY(-12px);
                box-shadow: 0 20px 50px rgba(0,0,0,0.2);
            }

            .service-card img {
                height: 280px;
                object-fit: cover;
                transition: transform 0.7s;
            }

            .service-card:hover img {
                transform: scale(1.08);
            }

            .service-card .card-body {
                padding: 2.5rem;
            }

            .service-card .card-title {
                font-size: 1.7rem;
                margin-bottom: 1.2rem;
                color: #4a0e78;
            }

            .service-card .btn {
                background: linear-gradient(135deg, #4a0e78, #6a3093);
                border: none;
                border-radius: 50px;
                padding: 10px 30px;
                font-weight: 500;
                letter-spacing: 0.5px;
                transition: all 0.3s;
            }

                .service-card .btn:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 8px 20px rgba(74, 14, 120, 0.3);
                }

        /* Автор секция */
        .author-section {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            padding: 6rem 0;
            position: relative;
        }

        .author-image {
            width: 320px;
            height: 320px;
            border-radius: 50%;
            object-fit: cover;
            border: 10px solid white;
            box-shadow: 0 20px 50px rgba(0,0,0,0.15);
            transition: all 0.5s;
        }

            .author-image:hover {
                transform: scale(1.08);
                box-shadow: 0 25px 60px rgba(0,0,0,0.2);
            }

        .author-quote {
            font-style: italic;
            font-size: 1.3rem;
            color: #4a0e78;
            position: relative;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            line-height: 1.6;
        }

            .author-quote:before {
                content: '"';
                font-size: 5rem;
                position: absolute;
                top: -20px;
                left: 15px;
                color: rgba(106, 48, 147, 0.1);
                font-family: serif;
                line-height: 1;
            }

        /* Анимации */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes textFadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes float {
            0% {
                transform: translateY(0) rotate(0deg);
                opacity: 0;
            }

            10% {
                opacity: 1;
            }

            90% {
                opacity: 1;
            }

            100% {
                transform: translateY(-100vh) rotate(360deg);
                opacity: 0;
            }
        }

        .animate {
            opacity: 0;
            animation: fadeInUp 1s ease-out forwards;
        }

        .delay-1 {
            animation-delay: 0.3s;
        }

        .delay-2 {
            animation-delay: 0.6s;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .hero-title {
                font-size: 3rem;
            }

            .hero-subtitle {
                font-size: 1.4rem;
            }

            .section {
                padding: 5rem 0;
            }
        }

        @@media (max-width: 768px) {
            .hero {
                height: 80vh;
                min-height: 600px;
                clip-path: polygon(0 0, 100% 0, 100% 95%, 0 100%);
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.2rem;
            }

            .section-title {
                font-size: 2.2rem;
            }

            .author-image {
                width: 240px;
                height: 240px;
                margin-bottom: 2rem;
            }

            .service-card .card-body {
                padding: 2rem;
            }
        }

        @@media (max-width: 576px) {
            .hero {
                height: 70vh;
                min-height: 500px;
            }

            .hero-title {
                font-size: 2rem;
            }

            .hero-btn {
                padding: 12px 25px;
                font-size: 1rem;
            }

            .section-title {
                font-size: 1.8rem;
            }

            .author-image {
                width: 200px;
                height: 200px;
            }
        }
    </style>
}

<header class="hero">
    <div class="floating-elements">
        @* звезди *@
        @for (var i = 0; i < 15; i++)
        {
            <div class="star" style="
                width: @(new Random().Next(3, 7))px;
                height: @(new Random().Next(3, 7))px;
                left: @(new Random().Next(0, 100))%;
                top: @(new Random().Next(0, 100))%;
                animation-delay: @(new Random().Next(0, 5))s;
                animation-duration: @(new Random().Next(5, 15))s;
                    "></div>
        }
    </div>
    <div class="container text-center hero-content">
        <h1 class="hero-title playfair">Добре дошли в Душевна Музайка</h1>
        <p class="hero-subtitle">Вашето място за хороскопи и психология</p>
        <a href="#services" class="btn hero-btn animate delay-1">
            <i class="fas fa-chevron-down"></i> Разгледайте услугите ни
        </a>
    </div>
</header>

<main>
    <!-- За нас секция -->
    <section class="section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0 animate">
                    <img src="https://www.explorepsychology.com/wp-content/uploads/2021/09/personality-psych2.png"
