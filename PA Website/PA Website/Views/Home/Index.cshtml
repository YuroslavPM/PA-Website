                                @if (!string.IsNullOrEmpty(article.Description)){
                                <p class="text-gray-600 mb-3 sm:mb-4 line-clamp-3 text-sm sm:text-base">@Html.Raw(article.Description.TruncateHtml(30))</p>
                                }
