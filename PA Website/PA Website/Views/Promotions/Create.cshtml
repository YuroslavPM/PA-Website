@model PA_Website.Models.Promotion

@{
ViewData["Title"] = "Създай Промоция";
Layout = "_Layout";
}

@section Styles {
<style>
    .create-container {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        min-height: calc(100vh - 80px);
        padding: 2rem 0;
    }

    .create-card {
        background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
        border-radius: 24px;
        box-shadow: 0 20px 40px -10px rgba(124, 58, 237, 0.1);
        overflow: hidden;
        position: relative;
        max-width: 800px;
        margin: 0 auto;
    }

    .create-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 6px;
        background: linear-gradient(90deg, #4c1d95, #7c3aed);
    }

    .create-header {
        padding: 2.5rem 2.5rem 1.5rem;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        border-bottom: 1px solid rgba(124, 58, 237, 0.1);
    }

    .create-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #4c1d95, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
        text-align: center;
        position: relative;
    }

    .create-title::after {
        content: '';
        position: absolute;
        bottom: -12px;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 4px;
        background: linear-gradient(90deg, #4c1d95, #7c3aed);
        border-radius: 2px;
    }

    .create-subtitle {
        color: #64748b;
        text-align: center;
        margin-bottom: 0;
        font-size: 1.1rem;
    }

    .create-body {
        padding: 2.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: #4c1d95;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .form-control, .form-select {
        border-radius: 12px;
        border: 2px solid #e2e8f0;
        padding: 12px 16px;
        font-size: 1rem;
        background: white;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        width: 100%;
    }

    .form-control:focus, .form-select:focus {
        border-color: #7c3aed;
        box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
        outline: none;
    }

    .input-group {
        position: relative;
    }

    .input-group-text {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: linear-gradient(135deg, #4c1d95, #7c3aed);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 8px 12px;
        font-size: 0.875rem;
        z-index: 10;
    }

    .input-group .form-control {
        padding-left: 56px;
    }

    .text-danger {
        color: #ef4444;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    .alert-danger {
        background: linear-gradient(135deg, #fef2f2, #fee2e2);
        border: 1px solid #fecaca;
        border-radius: 12px;
        color: #dc2626;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #4c1d95, #7c3aed);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 12px 32px;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 6px -1px rgba(124, 58, 237, 0.2);
        font-size: 1rem;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #7c3aed, #4c1d95);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 10px 25px -5px rgba(124, 58, 237, 0.4);
    }

    .btn-outline {
        border: 2px solid #4c1d95;
        color: #4c1d95;
        border-radius: 12px;
        padding: 12px 24px;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: white;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-outline:hover {
        background: linear-gradient(135deg, #4c1d95, #7c3aed);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 10px 25px -5px rgba(124, 58, 237, 0.4);
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    /* Mobile-specific styles */
    @@media (max-width: 768px) {
        .form-row {
            grid-template-columns: 1fr;
        }

        .create-title {
            font-size: 2rem;
        }

        .create-header,
        .create-body {
            padding: 1.5rem;
        }

        .action-buttons {
            flex-direction: column;
            align-items: center;
        }

        /* Adjust input group icons for mobile */
        .input-group-text {
            padding: 6px 10px;
            font-size: 0.75rem;
        }

        .input-group .form-control {
            padding-left: 42px;
        }

        /* Make buttons full width on mobile */
        .btn-primary, .btn-outline {
            width: 100%;
            justify-content: center;
        }
    }

    /* Extra small devices (phones, 480px and down) */
    @@media (max-width: 480px) {
        .create-title {
            font-size: 1.75rem;
        }

        .create-subtitle {
            font-size: 1rem;
        }

        .form-control, .form-select {
            padding: 10px 14px;
            font-size: 0.9rem;
        }

        .input-group-text {
            left: 8px;
            padding: 5px 8px;
        }

        .input-group .form-control {
            padding-left: 38px;
        }

        .btn-primary, .btn-outline {
            padding: 10px 16px;
            font-size: 0.9rem;
        }
    }
</style>
}

<div class="create-container">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="create-card">
            <div class="create-header">
                <h1 class="create-title">Създай Нова Промоция</h1>
                <p class="create-subtitle">Добавете нова промоция за вашите клиенти</p>
            </div>

            <div class="create-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert-danger"></div>

                    <div class="form-group">
                        <label asp-for="Title" class="form-label">Заглавие</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-tag"></i></span>
                            <input asp-for="Title" class="form-control" placeholder="Въведете заглавие на промоцията" />
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Описание</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Въведете описание на промоцията"></textarea>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PromotionType" class="form-label">Тип промоция</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-gift"></i></span>
                            <select asp-for="PromotionType" class="form-control" asp-items="ViewBag.PromotionTypes">
                                <option value="">Изберете тип промоция</option>
                            </select>
                        </div>
                        <span asp-validation-for="PromotionType" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="DiscountPercentage" class="form-label">Процент отстъпка (%)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-percentage"></i></span>
                                <input asp-for="DiscountPercentage" class="form-control" type="number" step="0.01" min="0" max="100" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="FixedDiscount" class="form-label">Фиксирана отстъпка (лв.)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-coins"></i></span>
                                <input asp-for="FixedDiscount" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="FixedDiscount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="FreeServiceName" class="form-label">Безплатна услуга</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-star"></i></span>
                            <input asp-for="FreeServiceName" class="form-control" placeholder="Име на безплатната услуга" />
                        </div>
                        <span asp-validation-for="FreeServiceName" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="StartDate" class="form-label">Начална дата</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                <input asp-for="StartDate" class="form-control" type="datetime-local" />
                            </div>
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EndDate" class="form-label">Крайна дата</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                <input asp-for="EndDate" class="form-control" type="datetime-local" />
                            </div>
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="MaxUsage" class="form-label">Максимален брой използвания</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-users"></i></span>
                            <input asp-for="MaxUsage" class="form-control" type="number" min="1" placeholder="Неограничено (празно)" />
                        </div>
                        <span asp-validation-for="MaxUsage" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="flex items-center">
                            <input asp-for="IsActive" class="form-check-input mr-2" type="checkbox" />
                            <label asp-for="IsActive" class="form-label mb-0">Активна промоция</label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                    <div class="action-buttons">
                        <button type="submit" class="btn-primary">
                            <i class="fas fa-save mr-2"></i>Създай промоция
                        </button>
                        <a asp-action="Index" class="btn-outline">
                            <i class="fas fa-arrow-left"></i>Назад към списъка
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@await Html.PartialAsync("_ValidationScriptsPartial")
<script>
    // Set default dates
    document.addEventListener('DOMContentLoaded', function() {
        const now = new Date();
        const startDate = document.getElementById('StartDate');
        const endDate = document.getElementById('EndDate');

        if (startDate && !startDate.value) {
            startDate.value = now.toISOString().slice(0, 16);
        }

        if (endDate && !endDate.value) {
            const endDateTime = new Date(now.getTime() + (30 * 24 * 60 * 60 * 1000)); // 30 days from now
            endDate.value = endDateTime.toISOString().slice(0, 16);
        }
    });
</script>
}