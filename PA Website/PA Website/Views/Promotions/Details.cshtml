@model PA_Website.Models.Promotion

@{
    ViewData["Title"] = "Детайли на Промоция";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .details-container {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: calc(100vh - 80px);
            padding: 2rem 0;
        }

        .details-card {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 24px;
            box-shadow: 0 20px 40px -10px rgba(124, 58, 237, 0.1);
            overflow: hidden;
            position: relative;
            max-width: 800px;
            margin: 0 auto;
        }

        .details-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #4c1d95, #7c3aed);
        }

        .details-header {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .details-title {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .details-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .details-body {
            padding: 2rem;
        }

        .detail-row {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 1rem;
            margin-bottom: 1.5rem;
            align-items: center;
        }

        .detail-label {
            font-weight: 600;
            color: #4c1d95;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .detail-value {
            color: #374151;
            font-size: 1rem;
        }

        .status-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .status-active {
            background: #10b981;
            color: white;
        }

        .status-inactive {
            background: #6b7280;
            color: white;
        }

        .promotion-type-badge {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .discount-info {
            background: #f3f4f6;
            padding: 1rem;
            border-radius: 8px;
            margin: 1rem 0;
        }

        .usage-info {
            background: #fef3c7;
            padding: 1rem;
            border-radius: 8px;
            margin: 1rem 0;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .btn-primary {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #7c3aed, #4c1d95);
            color: white;
            transform: translateY(-2px);
        }

        .btn-outline {
            border: 2px solid #4c1d95;
            color: #4c1d95;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: white;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-outline:hover {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            transform: translateY(-2px);
        }

        .btn-danger {
            background: linear-gradient(135deg, #dc2626, #ef4444);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-danger:hover {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
            transform: translateY(-2px);
        }

        .users-section {
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #e5e7eb;
        }

        .users-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 1rem;
        }

        .user-list {
            background: #f9fafb;
            border-radius: 12px;
            padding: 1rem;
        }

        .user-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem;
            border-bottom: 1px solid #e5e7eb;
        }

        .user-item:last-child {
            border-bottom: none;
        }

        .user-info {
            display: flex;
            flex-direction: column;
        }

        .user-name {
            font-weight: 600;
            color: #374151;
        }

        .user-email {
            font-size: 0.875rem;
            color: #6b7280;
        }

        .usage-date {
            font-size: 0.875rem;
            color: #6b7280;
        }

        @@media (max-width: 768px) {
            .details-container {
                padding: 1rem 0;
            }

            .details-title {
                font-size: 1.5rem;
            }

            .details-body {
                padding: 1.5rem;
            }

            .detail-row {
                grid-template-columns: 1fr;
                gap: 0.5rem;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }

            .action-buttons .btn-primary,
            .action-buttons .btn-outline,
            .action-buttons .btn-danger {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}

<div class="details-container">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="details-card">
            <div class="details-header">
                <h1 class="details-title">@Model.Title</h1>
                <p class="details-subtitle">Детайли на промоцията</p>
            </div>

            <div class="details-body">
                <div class="detail-row">
                    <div class="detail-label">Заглавие</div>
                    <div class="detail-value">@Model.Title</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Описание</div>
                    <div class="detail-value">@Model.Description</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Тип на промоцията</div>
                    <div class="detail-value">
                        <span class="promotion-type-badge">
                            @GetPromotionTypeText(Model.PromotionType)
                        </span>
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Статус</div>
                    <div class="detail-value">
                        <span class="status-badge @(Model.IsActive ? "status-active" : "status-inactive")">
                            @(Model.IsActive ? "Активна" : "Неактивна")
                        </span>
                    </div>
                </div>

                @if (Model.DiscountPercentage.HasValue || Model.FixedDiscount.HasValue)
                {
                    <div class="discount-info">
                        <h3 style="color: #4c1d95; margin-bottom: 0.5rem;">Информация за отстъпка</h3>
                        @if (Model.DiscountPercentage.HasValue)
                        {
                            <p><strong>Процент отстъпка:</strong> @Model.DiscountPercentage.Value%</p>
                        }
                        @if (Model.FixedDiscount.HasValue)
                        {
                            <p><strong>Фиксирана отстъпка:</strong> @Model.FixedDiscount.Value лв.</p>
                        }
                    </div>
                }

                @if (Model.FreeServiceName != null)
                {
                    <div class="discount-info">
                        <h3 style="color: #4c1d95; margin-bottom: 0.5rem;">Безплатна услуга</h3>
                        <p><strong>Услуга:</strong> @Model.FreeServiceName</p>
                    </div>
                }

                <div class="detail-row">
                    <div class="detail-label">Дата на начало</div>
                    <div class="detail-value">@Model.StartDate.ToString("dd.MM.yyyy")</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Дата на край</div>
                    <div class="detail-value">@Model.EndDate.ToString("dd.MM.yyyy")</div>
                </div>

                @if (Model.MaxUsage.HasValue)
                {
                    <div class="usage-info">
                        <h3 style="color: #d97706; margin-bottom: 0.5rem;">Лимит на използване</h3>
                        <p><strong>Максимален брой използвания:</strong> @Model.MaxUsage.Value</p>
                        <p><strong>Използвани пъти:</strong> @Model.UsedCount</p>
                        <p><strong>Оставащи:</strong> @(Model.MaxUsage.Value - Model.UsedCount)</p>
                    </div>
                }

                <div class="detail-row">
                    <div class="detail-label">Създадена на</div>
                    <div class="detail-value">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
                </div>

                @if (Model.UpdatedAt.HasValue)
                {
                    <div class="detail-row">
                        <div class="detail-label">Обновена на</div>
                        <div class="detail-value">@Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")</div>
                    </div>
                }

                @if (Model.UserPromotions.Any())
                {
                    <div class="users-section">
                        <h3 class="users-title">Потребители, използвали промоцията</h3>
                        <div class="user-list">
                            @foreach (var userPromotion in Model.UserPromotions.OrderByDescending(up => up.UsedAt))
                            {
                                <div class="user-item">
                                    <div class="user-info">
                                        <div class="user-name">@userPromotion.User.FName @userPromotion.User.LName</div>
                                        <div class="user-email">@userPromotion.User.Email</div>
                                    </div>
                                    <div class="usage-date">
                                        @userPromotion.UsedAt.ToString("dd.MM.yyyy HH:mm")
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="action-buttons">
                    <a href="@Url.Action("Edit", "Promotions", new { id = Model.Id })" class="btn-primary">
                        <i class="fas fa-edit"></i>
                        Редактирай
                    </a>
                    <a href="@Url.Action("Index", "Promotions")" class="btn-outline">
                        <i class="fas fa-arrow-left"></i>
                        Назад към списъка
                    </a>
                    <a href="@Url.Action("Delete", "Promotions", new { id = Model.Id })" class="btn-danger">
                        <i class="fas fa-trash"></i>
                        Изтрий
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetPromotionTypeText(string promotionType)
    {
        return promotionType switch
        {
            "FirstBooking" => "Първа резервация",
            "Discount" => "Отстъпка",
            "FreeService" => "Безплатна услуга",
            "Loyalty" => "Лоялност",
            _ => promotionType
        };
    }
} 