@model PA_Website.Models.Promotion
@{
    ViewData["Title"] = "Изтрий Промоция";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .delete-container {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: calc(100vh - 80px);
            padding: 2rem 0;
        }
        .delete-card {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 24px;
            box-shadow: 0 20px 40px -10px rgba(124, 58, 237, 0.1);
            overflow: hidden;
            position: relative;
            max-width: 600px;
            margin: 0 auto;
        }
        .delete-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #dc2626, #f59e0b);
        }
        .delete-header {
            background: linear-gradient(135deg, #dc2626, #f59e0b);
            color: white;
            padding: 2rem;
            text-align: center;
        }
        .delete-title {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        .delete-body {
            padding: 2rem;
        }
        .delete-label {
            font-weight: 600;
            color: #4c1d95;
            font-size: 1rem;
            margin-bottom: 0.25rem;
            display: block;
        }
        .delete-value {
            color: #374151;
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }
        .delete-warning {
            color: #dc2626;
            font-weight: bold;
            margin-bottom: 1.5rem;
            font-size: 1.1rem;
        }
        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }
        .btn-danger {
            background: linear-gradient(135deg, #dc2626, #f59e0b);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        .btn-danger:hover {
            background: linear-gradient(135deg, #f59e0b, #dc2626);
            color: white;
            transform: translateY(-2px);
        }
        .btn-outline {
            border: 2px solid #4c1d95;
            color: #4c1d95;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: white;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        .btn-outline:hover {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            transform: translateY(-2px);
        }
        @@media (max-width: 768px) {
            .delete-container {
                padding: 1rem 0;
            }
            .delete-title {
                font-size: 1.5rem;
            }
            .delete-body {
                padding: 1.5rem;
            }
            .action-buttons {
                flex-direction: column;
                align-items: center;
            }
            .action-buttons .btn-danger,
            .action-buttons .btn-outline {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}

<div class="delete-container">
    <div class="delete-card">
        <div class="delete-header">
            <h1 class="delete-title">Изтриване на промоция</h1>
        </div>
        <div class="delete-body">
            <div class="delete-warning">
                <i class="fas fa-exclamation-triangle"></i> Сигурни ли сте, че искате да изтриете тази промоция?
            </div>
            <div>
                <span class="delete-label">Заглавие:</span>
                <span class="delete-value">@Model.Title</span>
            </div>
            <div>
                <span class="delete-label">Тип:</span>
                <span class="delete-value">@Model.PromotionType</span>
            </div>
            <div>
                <span class="delete-label">Описание:</span>
                <span class="delete-value">@Model.Description</span>
            </div>
            <form asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="action-buttons">
                    <button type="submit" class="btn-danger">
                        <i class="fas fa-trash"></i> Изтрий
                    </button>
                    <a href="@Url.Action("Index", "Promotions")" class="btn-outline">
                        <i class="fas fa-arrow-left"></i> Назад към списъка
                    </a>
                </div>
            </form>
        </div>
    </div>
</div> 