@model PA_Website.Models.UserService

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <style>
        .delete-container {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: calc(100vh - 80px);
            padding: 2rem 0;
        }
        .delete-card {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 24px;
            box-shadow: 0 20px 40px -10px rgba(124, 58, 237, 0.1);
            overflow: hidden;
            position: relative;
            max-width: 600px;
            margin: 0 auto;
        }
        .delete-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #4c1d95, #7c3aed);
        }
        .delete-header {
            padding: 2.5rem 2.5rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            border-bottom: 1px solid rgba(124, 58, 237, 0.1);
        }
        .delete-title {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            text-align: center;
            position: relative;
        }
        .delete-title::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #4c1d95, #7c3aed);
            border-radius: 2px;
        }
        .delete-subtitle {
            color: #64748b;
            text-align: center;
            margin-bottom: 0;
            font-size: 1.1rem;
        }
        /* Card, badge, button, and form styles remain as in previous modernized version for consistency */
        /* ...existing card, badge, button, and form styles from previous modern version... */
    </style>
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>UserService</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.CategoryOfService)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReservationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReservationTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
