@model PA_Website.Models.UserService

@{
    ViewData["Title"] = "Редакция на резервация";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .edit-container {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: calc(100vh - 80px);
            padding: 2rem 0;
        }

        .edit-card {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 24px;
            box-shadow: 0 20px 40px -10px rgba(124, 58, 237, 0.1);
            overflow: hidden;
            position: relative;
            max-width: 800px;
            margin: 0 auto;
        }

        .edit-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #4c1d95, #7c3aed);
        }

        .edit-header {
            padding: 2.5rem 2.5rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            border-bottom: 1px solid rgba(124, 58, 237, 0.1);
        }

        .edit-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            text-align: center;
            position: relative;
        }

        .edit-title::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #4c1d95, #7c3aed);
            border-radius: 2px;
        }

        .edit-subtitle {
            color: #64748b;
            text-align: center;
            margin-bottom: 0;
            font-size: 1.1rem;
        }

        .edit-body {
            padding: 2.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #4c1d95;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .form-input, .form-select {
            border-radius: 12px;
            border: 2px solid #e2e8f0;
            padding: 12px 16px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            width: 100%;
            background: white;
            font-size: 1rem;
        }

        .form-input:focus, .form-select:focus {
            border-color: #7c3aed;
            box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
            outline: none;
        }

        .text-danger {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }

        .btn-primary {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 32px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 6px -1px rgba(124, 58, 237, 0.2);
            cursor: pointer;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #7c3aed, #4c1d95);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(124, 58, 237, 0.4);
        }

        .btn-outline {
            border: 2px solid #4c1d95;
            color: #4c1d95;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: white;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-outline:hover {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(124, 58, 237, 0.4);
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        @@media (max-width: 768px) {
            .edit-title {
                font-size: 2rem;
            }

            .edit-header,
            .edit-body {
                padding: 1.5rem;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
}

<div class="edit-container">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="edit-card">
            <div class="edit-header">
                <h1 class="edit-title">Редакция на резервация</h1>
                <p class="text-center text-gray-600">Променете информацията за вашата резервация</p>
            </div>

            <div class="edit-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group">
                        <label asp-for="UserId" class="form-label">Потребител</label>
                        <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ServiceId" class="form-label">Услуга</label>
                        <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId"></select>
                        <span asp-validation-for="ServiceId" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ReservationDate" class="form-label">Дата на резервация</label>
                        <input asp-for="ReservationDate" class="form-input" type="date" />
                        <span asp-validation-for="ReservationDate" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ReservationTime" class="form-label">Час на резервация</label>
                        <input asp-for="ReservationTime" class="form-input" type="time" />
                        <span asp-validation-for="ReservationTime" class="text-danger"></span>
                    </div>

                    <div class="action-buttons">
                        <button type="submit" class="btn-primary">
                            <i class="fas fa-save mr-2"></i>Запази промените
                        </button>
                        <a asp-action="Index" class="btn-outline">
                            <i class="fas fa-arrow-left"></i>Назад към списъка
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
