        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        font-size: 2rem;
        color: white;
        background: linear-gradient(135deg, #4c1d95, #7c3aed);
    }

    .admin-action-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .admin-action-description {
        color: #64748b;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
    }

    .btn-admin {
        background: linear-gradient(135deg, #4c1d95, #7c3aed);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        font-size: 0.9rem;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 6px -1px rgba(124, 58, 237, 0.2);
    }

    .btn-admin:hover {
        background: linear-gradient(135deg, #7c3aed, #4c1d95);
        transform: translateY(-2px);
        box-shadow: 0 10px 25px -5px rgba(124, 58, 237, 0.4);
        color: white;
    }

    .recent-reservations {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .recent-reservations-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 1.5rem;
    }

    .reservation-item {
        display: flex;
        flex-direction: column;
        padding: 1rem;
        border-bottom: 1px solid #e2e8f0;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .reservation-item:hover {
        background: #f8fafc;
    }

    .reservation-item:last-child {
        border-bottom: none;
    }

    .reservation-info {
        flex: 1;
        margin-bottom: 1rem;
    }

    .reservation-user {
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 0.25rem;
    }

    .reservation-service {
        color: #64748b;
        font-size: 0.9rem;
    }

    .reservation-date {
        color: #64748b;
        font-size: 0.875rem;
    }

    .reservation-actions {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .status-badge {
