        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        color: white;
    }

    .stat-icon.total {
        background: linear-gradient(135deg, #4c1d95, #7c3aed);
    }

    .stat-icon.pending {
        background: linear-gradient(135deg, #fbbf24, #f59e0b);
    }

    .stat-icon.confirmed {
        background: linear-gradient(135deg, #10b981, #059669);
    }

    .stat-icon.completed {
