    }

    .status-cancelled {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }

    /* Financial Dashboard Styles */
    .financial-dashboard {
        margin-bottom: 2rem;
    }

    .financial-header {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .financial-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #4c1d95;
    }

    .financial-subtitle {
