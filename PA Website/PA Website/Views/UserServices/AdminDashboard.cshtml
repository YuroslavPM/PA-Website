@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
@model IEnumerable<PA_Website.Models.UserService>

@{
ViewData["Title"] = "Административен Панел";
var user = await UserManager.GetUserAsync(User);
Layout = "_Layout";

// Get statistics
var totalReservations = Model.Count();
var pendingReservations = Model.Count(r => r.Status == "Pending");
var confirmedReservations = Model.Count(r => r.Status == "Confirmed");
var completedReservations = Model.Count(r => r.Status == "Completed");
var cancelledReservations = Model.Count(r => r.Status == "Cancelled");
var recentReservations = Model.OrderByDescending(r => r.ReservationDate).Take(4).ToList();
}

@section Styles {
<style>
    .admin-dashboard-container {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        min-height: calc(100vh - 80px);
        padding: 2rem 0;
    }

    .admin-dashboard-header {
        background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
        border-radius: 20px;
        box-shadow: 0 15px 30px -10px rgba(124, 58, 237, 0.1);
        padding: 2rem;
        margin-bottom: 1.5rem;
        position: relative;
        overflow: hidden;
    }

    .admin-dashboard-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 6px;
        background: linear-gradient(90deg, #4c1d95, #7c3aed);
    }

    .admin-dashboard-title {
        font-family: 'Playfair Display', serif;
        font-size: 2rem;
        font-weight: 700;
        background: linear-gradient(135deg, #4c1d95, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
        position: relative;
    }

    .admin-dashboard-title::after {
        content: '';
        position: absolute;
        bottom: -12px;
        left: 0;
        width: 100px;
        height: 4px;
        background: linear-gradient(90deg, #4c1d95, #7c3aed);
        border-radius: 2px;
    }

    .admin-dashboard-subtitle {
        color: #64748b;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
