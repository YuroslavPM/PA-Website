@model PA_Website.Models.Article
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Създай Статия";
    var currentUser = await UserManager.GetUserAsync(User);
    Layout = "_Layout";
}

@section Styles {
    <style>
        .create-container {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: calc(100vh - 80px);
            padding: 2rem 0;
        }

        .create-card {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 24px;
            box-shadow: 0 20px 40px -10px rgba(124, 58, 237, 0.1);
            overflow: hidden;
            position: relative;
            max-width: 1200px;
            margin: 0 auto;
        }

        .create-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #4c1d95, #7c3aed);
            }

        .create-header {
            padding: 2.5rem 2.5rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            border-bottom: 1px solid rgba(124, 58, 237, 0.1);
        }

        .create-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            text-align: center;
            position: relative;
        }

        .create-title::after {
                content: '';
                position: absolute;
            bottom: -12px;
                left: 50%;
                transform: translateX(-50%);
            width: 100px;
                height: 4px;
            background: linear-gradient(90deg, #4c1d95, #7c3aed);
                border-radius: 2px;
            }

        .create-subtitle {
            color: #64748b;
            text-align: center;
            margin-bottom: 0;
            font-size: 1.1rem;
        }

        .create-body {
            padding: 2.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #4c1d95;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .form-control, .form-select {
            border-radius: 12px;
            border: 2px solid #e2e8f0;
            padding: 12px 16px;
            font-size: 1rem;
            background: white;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            width: 100%;
        }

        .form-control:focus, .form-select:focus {
            border-color: #7c3aed;
            box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
            outline: none;
        }

        .input-group {
            position: relative;
            }

        .input-group-text {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 8px 12px;
            font-size: 0.875rem;
            z-index: 10;
        }

        .input-group .form-control {
            padding-left: 48px;
        }

        .text-danger {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }

        .alert-danger {
            background: linear-gradient(135deg, #fef2f2, #fee2e2);
            border: 1px solid #fecaca;
            border-radius: 12px;
            color: #dc2626;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 32px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 6px -1px rgba(124, 58, 237, 0.2);
            font-size: 1rem;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #7c3aed, #4c1d95);
                color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(124, 58, 237, 0.4);
            }

        .btn-outline {
            border: 2px solid #4c1d95;
            color: #4c1d95;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: white;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-outline:hover {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
                color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(124, 58, 237, 0.4);
            }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        /* CKEditor Styles */
        #editor {
            width: 100% !important;
            min-width: 100% !important;
        }

        .ck-editor__editable {
            min-height: 500px !important;
            width: 100% !important;
            border-radius: 12px !important;
            border: 2px solid #e2e8f0 !important;
        }

        .ck-editor {
            width: 100% !important;
        }

        .ck.ck-editor__main > .ck-editor__editable {
            border-radius: 12px !important;
            border: 2px solid #e2e8f0 !important;
        }

        .ck.ck-editor__main > .ck-editor__editable:focus {
            border-color: #7c3aed !important;
            box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1) !important;
        }

        @@media (max-width: 768px) {
            .create-title {
                font-size: 2rem;
            }

            .create-header,
            .create-body {
                padding: 1.5rem;
        }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
}

<div class="create-container">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="create-card">
            <div class="create-header">
                <h1 class="create-title">Създай Нова Статия</h1>
                <p class="create-subtitle">Добавете нова статия към вашия блог</p>
                    </div>

            <div class="create-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert-danger"></div>

                    <div class="form-group">
                            <label asp-for="Title" class="form-label">Заглавие</label>
                            <div class="input-group">
                                <span class="input-group-text px-2"><i class="fas fa-heading"></i></span>
                                <input asp-for="Title" class="form-control" placeholder="Въведете заглавие на статията" />
                            </div>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                    <div class="form-group">
                        <label asp-for="Category" class="form-label">Категория</label>
                        <div class="input-group">
                            <span class="input-group-text px-2"><i class="fas fa-tag"></i></span>
                            <select asp-for="Category" class="form-control" asp-items="ViewBag.Categories">
                                <option value="">Изберете категория</option>
                            </select>
                        </div>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                            <label asp-for="Description" class="form-label px-2">Съдържание</label>
                        <textarea asp-for="Description" id="editor" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                    <div class="form-group">
                        <label asp-for="ImageFile" class="form-label ">Снимка</label>
                            <div class="input-group px-2">
                                <span class="input-group-text"><i class="fas fa-image"></i></span>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                            </div>
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                    <div class="action-buttons">
                        <button type="submit" class="btn-primary">
                            <i class="fas fa-save mr-2"></i>Създай статия
                        </button>
                        <a asp-action="Index" class="btn-outline">
                            <i class="fas fa-arrow-left"></i>Назад към списъка
                        </a>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="@($"https://cdn.tiny.cloud/1/{ViewBag.TinyMceApiKey}/tinymce/6/tinymce.min.js")" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#editor',
            language: 'en',
            height: 500,
            plugins: 'lists link image table code help wordcount',
            toolbar: 'undo redo | bold italic | alignleft aligncenter alignright | bullist numlist | image | help',
            content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif; font-size: 14px; }',
            automatic_uploads: true,
            file_picker_types: 'image',
            images_upload_handler: function (blobInfo, progress, failure) {
                return new Promise((resolve, reject) => {
                    const reader = new FileReader();
                    reader.onload = function () {
                        resolve(reader.result);
                    };
                    reader.onerror = function () {
                        reject('Image upload failed');
                    };
                    reader.readAsDataURL(blobInfo.blob());
                });
            },
            image_advtab: true,
            image_dimensions: true
        });
    </script>
}

