@model PA_Website.Models.Article
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager
@inject RoleManager<IdentityRole> RoleManager
@{
    var user = await UserManager.GetUserAsync(User);
    var isAdmin = user != null && await UserManager.IsInRoleAsync(user, "Admin");
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .details-container {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: calc(100vh - 80px);
            padding: 2rem 0;
        }

        .details-card {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 24px;
            box-shadow: 0 20px 40px -10px rgba(124, 58, 237, 0.1);
            overflow: hidden;
            position: relative;
            max-width: 1000px;
            margin: 0 auto;
        }

        .details-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #4c1d95, #7c3aed);
            }

        .details-header {
            padding: 2.5rem 2.5rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            border-bottom: 1px solid rgba(124, 58, 237, 0.1);
        }

        .details-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            text-align: center;
            line-height: 1.3;
        }

        .details-subtitle {
            color: #64748b;
            text-align: center;
            margin-bottom: 1.5rem;
            font-size: 1.1rem;
        }

        .article-meta {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #4c1d95;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .meta-icon {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            border-radius: 6px;
            padding: 4px 8px;
            font-size: 0.75rem;
        }

        .details-body {
            padding: 2.5rem;
        }

        .article-image-wrapper {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .article-image-container {
            max-width: 100%;
            max-height: 400px;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 30px -5px rgba(124, 58, 237, 0.2);
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        }

        .article-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            }

        .article-content {
            line-height: 1.8;
            color: #374151;
            font-size: 1.1rem;
        }

        .article-content img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 1.5rem auto;
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(124, 58, 237, 0.1);
        }

        .article-content h1, .article-content h2, .article-content h3, 
        .article-content h4, .article-content h5, .article-content h6 {
            color: #4c1d95;
            margin-top: 2rem;
            margin-bottom: 1rem;
            font-family: 'Playfair Display', serif;
        }

        .article-content p {
            margin-bottom: 1.5rem;
        }

        .article-content a {
            color: #7c3aed;
            text-decoration: underline;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .article-content a:hover {
            color: #4c1d95;
            text-decoration: none;
        }

        .article-content a:visited {
            color: #a855f7;
        }

        .article-content table {
            width: 100%;
            border-collapse: collapse;
            margin: 1.5rem 0;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 12px rgba(124, 58, 237, 0.1);
        }

        .article-content table td, .article-content table th {
            border: 1px solid #e2e8f0;
            padding: 12px;
            text-align: left;
        }

        .article-content table th {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            font-weight: 600;
        }

        .article-content blockquote {
            border-left: 4px solid #7c3aed;
            margin: 1.5rem 0;
            padding: 1rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            font-style: italic;
            border-radius: 0 12px 12px 0;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
            }

        .btn-primary {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 6px -1px rgba(124, 58, 237, 0.2);
            font-size: 1rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #7c3aed, #4c1d95);
            color: white;
                transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(124, 58, 237, 0.4);
            }

        .btn-outline {
            border: 2px solid #4c1d95;
            color: #4c1d95;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: white;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-outline:hover {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
                color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(124, 58, 237, 0.4);
            }

        .btn-danger {
            background: linear-gradient(135deg, #dc2626, #ef4444);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 6px -1px rgba(220, 38, 38, 0.2);
            font-size: 1rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            }

        .btn-danger:hover {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(220, 38, 38, 0.4);
        }

        @@media (max-width: 768px) {
            .details-title {
                font-size: 2rem;
            }

            .details-header,
            .details-body {
                padding: 1.5rem;
            }

            .article-meta {
                flex-direction: column;
                align-items: center;
                gap: 1rem;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
}

<div class="details-container">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="details-card">
            <div class="details-header">
                <h1 class="details-title">@Model.Title</h1>
                        <div class="article-meta">
                    <div class="meta-item">
                        <span class="meta-icon">
                            <i class="fas fa-calendar"></i>
                        </span>
                        <span>@Model.PublicationDate.ToString("dd.MM.yyyy")</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Category))
                    {
                        <div class="meta-item">
                            <span class="meta-icon">
                                <i class="fas fa-tag"></i>
                            </span>
                                <span>@Model.Category</span>
                            </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Creator?.UserName))
                    {
                        <div class="meta-item">
                            <span class="meta-icon">
                                <i class="fas fa-user"></i>
                            </span>
                            <span>@Model.Creator.UserName</span>
                            </div>
                    }
                        </div>
                    </div>

            <div class="details-body">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="article-image-wrapper">
                        <div class="article-image-container">
                            <img src="@Model.ImagePath" alt="@Model.Title" />
                        </div>
                    </div>
                }

                    <div class="article-content">
                        @Html.Raw(Model.Description)
                    </div>

                <div class="action-buttons">
                        @if (isAdmin)
                        {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-primary">
                            <i class="fas fa-edit"></i>Редактирай
                                </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-danger">
                            <i class="fas fa-trash"></i>Изтрий
                                </a>
                    }
                    <a asp-action="Index" class="btn-outline">
                        <i class="fas fa-arrow-left"></i>Назад към списъка
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Fix external links in article content
            $('.article-content a').each(function() {
                var originalHref = $(this).attr('href');
                
                if (originalHref) {
                    var fixedHref = originalHref;
                    var isExternal = false;
                    
                    // If link doesn't start with /, http://, https://, mailto:, or tel:
                    if (!originalHref.match(/^(https?:\/\/|mailto:|tel:|\/|#)/)) {
                        // Add https:// to make it an external link
                        fixedHref = 'https://' + originalHref;
                        isExternal = true;
                        $(this).attr('href', fixedHref);
                    }
                    
                    // Check if it's an external link (starts with http:// or https:// and not same domain)
                    if (fixedHref.match(/^https?:\/\//)) {
                        try {
                            var linkHostname = new URL(fixedHref).hostname;
                            var currentHostname = window.location.hostname;
                            
                            if (linkHostname !== currentHostname) {
                                isExternal = true;
                                $(this).attr('target', '_blank');
                                $(this).attr('rel', 'noopener noreferrer');
                            }
                        } catch (e) {
                            // If URL parsing fails, assume it's external and open in new tab
                            $(this).attr('target', '_blank');
                            $(this).attr('rel', 'noopener noreferrer');
                        }
                    }
                }
            });
        });
    </script>
}