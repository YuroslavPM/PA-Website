@model PA_Website.Models.Article

@{
    ViewData["Title"] = "Изтрий Статия";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .delete-container {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: calc(100vh - 80px);
            padding: 2rem 0;
        }

        .delete-card {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 24px;
            box-shadow: 0 20px 40px -10px rgba(220, 38, 38, 0.15);
            overflow: hidden;
            position: relative;
            max-width: 800px;
            margin: 0 auto;
            border: 1px solid rgba(220, 38, 38, 0.1);
        }

        .delete-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #dc2626, #ef4444);
        }

        .delete-header {
            padding: 2.5rem 2.5rem 1.5rem;
            background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
            border-bottom: 1px solid rgba(220, 38, 38, 0.1);
            text-align: center;
        }

        .delete-icon {
            font-size: 3rem;
            color: #dc2626;
            margin-bottom: 1rem;
            opacity: 0.8;
        }

        .delete-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: #dc2626;
            margin-bottom: 1rem;
            position: relative;
        }

        .delete-title::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #dc2626, #ef4444);
            border-radius: 2px;
        }

        .delete-subtitle {
            color: #991b1b;
            font-size: 1.1rem;
            margin-bottom: 0;
            font-weight: 500;
        }

        .delete-body {
            padding: 2.5rem;
        }

        .warning-alert {
            background: linear-gradient(135deg, #fef2f2, #fee2e2);
            border: 1px solid #fecaca;
            border-radius: 16px;
            color: #991b1b;
            padding: 1.5rem;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .warning-icon {
            font-size: 1.5rem;
            color: #dc2626;
            flex-shrink: 0;
        }

        .warning-text {
            font-weight: 500;
            margin: 0;
        }

        .article-preview {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 16px;
            border: 1px solid rgba(220, 38, 38, 0.1);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .preview-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.25rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 1rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid rgba(220, 38, 38, 0.1);
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .info-label {
            font-weight: 600;
            color: #6b7280;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .info-value {
            color: #1f2937;
            font-weight: 500;
            font-size: 1rem;
        }

        .category-badge {
            background: linear-gradient(135deg, #f59e0b, #f97316);
            color: white;
            border-radius: 12px;
            padding: 0.375rem 0.75rem;
            font-weight: 600;
            font-size: 0.75rem;
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            width: fit-content;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .btn-danger {
            background: linear-gradient(135deg, #dc2626, #ef4444);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 32px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 6px -1px rgba(220, 38, 38, 0.2);
            font-size: 1rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-danger:hover {
            background: linear-gradient(135deg, #b91c1c, #dc2626);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(220, 38, 38, 0.4);
        }

        .btn-outline {
            border: 2px solid #6b7280;
            color: #6b7280;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: white;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-outline:hover {
            background: linear-gradient(135deg, #6b7280, #9ca3af);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(107, 114, 128, 0.4);
        }

        @@media (max-width: 768px) {
            .delete-title {
                font-size: 2rem;
            }

            .delete-header,
            .delete-body {
                padding: 1.5rem;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

<div class="delete-container">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="delete-card">
            <div class="delete-header">
                <div class="delete-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h1 class="delete-title">Изтрий Статия</h1>
                <p class="delete-subtitle">Това действие не може да бъде отменено</p>
            </div>

            <div class="delete-body">
                <div class="warning-alert">
                    <div class="warning-icon">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <p class="warning-text">
                        Сигурни ли сте, че искате да изтриете тази статия? Това действие ще изтрие статията завинаги и не може да бъде отменено.
                    </p>
                </div>

                <div class="article-preview">
                    <h3 class="preview-title">Детайли на статията</h3>
                    
                    <div class="info-grid">
                        <div class="info-item">
                            <span class="info-label">Заглавие</span>
                            <span class="info-value">@Model.Title</span>
                        </div>
                        
                        <div class="info-item">
                            <span class="info-label">Категория</span>
                            <span class="category-badge">
                                <i class="fas fa-tag"></i>
                                @Model.Category
                            </span>
                        </div>
                        
                        <div class="info-item">
                            <span class="info-label">Дата на публикация</span>
                            <span class="info-value">@Model.PublicationDate.ToString("dd.MM.yyyy HH:mm")</span>
                        </div>
                        
                        <div class="info-item">
                            <span class="info-label">Създател ID</span>
                            <span class="info-value">@Model.CreatorId</span>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" class="action-buttons">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn-danger">
                        <i class="fas fa-trash"></i>
                        Изтрий статията
                    </button>
                    <a asp-action="Index" class="btn-outline">
                        <i class="fas fa-arrow-left"></i>
                        Назад към списъка
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
