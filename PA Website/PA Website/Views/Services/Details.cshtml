@using Microsoft.AspNetCore.Identity
@model PA_Website.Models.Service
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager
@inject RoleManager<IdentityRole> RoleManager
@{
    var reservedTimes = ViewData["ReservedTimes"] as List<DateTime> ?? new List<DateTime>();
    var user = await UserManager.GetUserAsync(User);
    var isAdmin = user != null && await UserManager.IsInRoleAsync(user, "Admin");
    ViewData["Title"] = Model.NameService;
    ViewData["Description"] = !string.IsNullOrEmpty(Model.Description) 
        ? System.Text.RegularExpressions.Regex.Replace(Model.Description, "<.*?>", "").Length > 160 
            ? System.Text.RegularExpressions.Regex.Replace(Model.Description, "<.*?>", "").Substring(0, 157) + "..." 
            : System.Text.RegularExpressions.Regex.Replace(Model.Description, "<.*?>", "")
        : $"{Model.NameService} - Душевна Мозайка";
    var serviceId = Model.Id;
    Layout = "_Layout";

}

@section Head {
    @* JSON-LD: Service + BreadcrumbList *@
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Service",
        "name": "@Model.NameService",
        "description": "@(System.Text.RegularExpressions.Regex.Replace(Model.Description ?? "", "<.*?>", ""))",
        "provider": {
            "@@type": "ProfessionalService",
            "name": "Душевна Мозайка",
            "url": "@($"{Context.Request.Scheme}://{Context.Request.Host}")"
        },
        "offers": {
            "@@type": "Offer",
            "price": "@Model.Price",
            "priceCurrency": "EUR",
            "availability": "https://schema.org/InStock"
        },
        "category": "@Model.CategoryOfService"
    }
    </script>
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "BreadcrumbList",
        "itemListElement": [
            {
                "@@type": "ListItem",
                "position": 1,
                "name": "Начало",
                "item": "@($"{Context.Request.Scheme}://{Context.Request.Host}")"
            },
            {
                "@@type": "ListItem",
                "position": 2,
                "name": "Услуги",
                "item": "@($"{Context.Request.Scheme}://{Context.Request.Host}/Services")"
            },
            {
                "@@type": "ListItem",
                "position": 3,
                "name": "@Model.NameService",
                "item": "@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}")"
            }
        ]
    }
    </script>
}

@section Styles {
    <style>
        .service-detail-container {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            padding: 3rem 0;
            min-height: calc(100vh - 80px);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .service-detail-card {
            border: none;
            border-radius: 24px;
            box-shadow: 0 20px 40px -10px rgba(124, 58, 237, 0.1);
            overflow: hidden;
            position: relative;
            background: white;
            max-width: 900px;
            margin: 0 auto;
        }

            .service-detail-card:before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
            height: 0px;
            background: none;
            }

        .service-detail-header {
            padding: 2.5rem 2.5rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            border-bottom: 1px solid rgba(124, 58, 237, 0.1);
        }

        .service-detail-title {
            font-family: 'Playfair Display', serif;
            color: #4c1d95;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
            position: relative;
        }

            .service-detail-title:after {
                content: '';
                position: absolute;
            bottom: -12px;
                left: 50%;
                transform: translateX(-50%);
            width: 100px;
                height: 4px;
            background: linear-gradient(90deg, #4c1d95, #7c3aed);
                border-radius: 2px;
            }

        .service-detail-body {
            padding: 0 2.5rem 2.5rem;
        }

        .service-detail-dl {
            display: grid;
            grid-template-columns: 200px 1fr;
            gap: 1rem;
            align-items: center;
        }

            .service-detail-dl dt {
                font-weight: 600;
            color: #4c1d95;
                margin: 0;
                padding: 0.5rem 0;
            }

            .service-detail-dl dd {
                margin: 0;
                padding: 0.5rem 0;
                color: #333;
            }

        .price-display {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            border-radius: 20px;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            font-weight: 500;
            box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
            transition: all 0.3s ease;
        }

        .price-display:hover {
                transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(124, 58, 237, 0.4);
        }

        .price-display i {
                color: white;
                margin-right: 0.5rem;
                font-size: 0.95rem;
        }

        .price-display span {
            font-weight: 600;
            letter-spacing: 0.5px;
        }


        .reservation-section {
            background: rgba(124, 58, 237, 0.05);
            border-radius: 16px;
            padding: 1.5rem;
            margin-top: 2rem;
            border: 1px solid rgba(124, 58, 237, 0.1);
        }

        .reservation-title {
            font-family: 'Playfair Display', serif;
            color: #4c1d95;
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .form-label {
            font-weight: 600;
            color: #4c1d95;
        }

        .form-control {
            border-radius: 12px;
            padding: 12px 16px;
            border: 2px solid #e5e7eb;
            transition: all 0.3s;
            background: #fff;
        }

            .form-control:focus {
            border-color: #7c3aed;
            box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
            outline: none;
            }

        .time-slot-btn {
            min-width: 100px;
            margin: 5px;
            border-radius: 20px;
            transition: all 0.3s;
        }

        .btn-service {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 32px;
            font-size: 1rem;
            transition: all 0.3s;
            font-weight: 600;
        }

            .btn-service:hover {
                transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(124, 58, 237, 0.3);
                color: white;
            }

        .btn-outline-service {
            border: 2px solid #4c1d95;
            color: #4c1d95;
            border-radius: 25px;
            padding: 12px 32px;
            font-size: 1rem;
            transition: all 0.3s;
            font-weight: 600;
            background: transparent;
        }

            .btn-outline-service:hover {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
                color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(124, 58, 237, 0.3);
            }

        .alert {
            border-radius: 12px;
            border: none;
        }

        .alert-success {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
        }

        .alert-danger {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
        }

        .alert-info {
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: white;
        }


        .service-image-container {
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
            border-radius: 16px;
            box-shadow: 0 8px 25px rgba(124, 58, 237, 0.15);
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        }

        .service-image {
            width: 100%;
            height: auto;
            max-height: 400px;
            object-fit: cover;
            object-position: center;
            display: block;
            transition: transform 0.3s ease, filter 0.3s ease;
            border-radius: 16px;
        }

        .service-image:hover {
            transform: scale(1.02);
            filter: brightness(1.05);
        }

        /* Responsive breakpoints for the image */
        @@media (max-width: 1200px) {
        .service-image {
            max-height: 350px;
        }
}

        @@media (max-width: 992px) {
        .service-image {
            max-height: 320px;
        }

        .service-image-container {
            margin-bottom: 1.5rem;
            border-radius: 12px;
        }

        .service-image {
            border-radius: 12px;
        }
}

        @@media (max-width: 768px) {
        .service-image {
            max-height: 280px;
        }

        .service-image-container {
            margin: 0 -1.5rem 1.5rem -1.5rem; /* Full width on mobile */
            border-radius: 0;
            box-shadow: 0 4px 15px rgba(124, 58, 237, 0.1);
        }

        .service-image {
            border-radius: 0;
            max-height: 250px;
        }
}

        @@media (max-width: 576px) {
        .service-image {
            max-height: 220px;
        }

        .service-image-container {
            margin-bottom: 1rem;
        }
}

        @@media (max-width: 480px) {
            .service-image {
                max-height: 200px;
            }

            /* Loading placeholder for when image is loading */
            .service-image-container::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: -1;
            }

            /* Image error fallback */
            .service-image-error {
                width: 100%;
                height: 200px;
                background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
                display: flex;
                align-items: center;
                justify-content: center;
                color: #64748b;
                font-size: 1rem;
                border-radius: 16px;
                border: 2px dashed #cbd5e1;
            }

            .service-image-error i {
                font-size: 2rem;
                margin-bottom: 0.5rem;
                opacity: 0.5;
            }

            @@media (max-width: 768px) {
                .service-detail-dl {
                    grid-template-columns: 1fr;
                }

                .service-detail-dl dt,
                .service-detail-dl dd {
                    padding: 0.3rem 0;
                }

                .service-detail-title {
                    font-size: 1.8rem;
                }

                .service-detail-container {
                    padding: 1rem 0;
                }

                .service-detail-card {
                    margin: 0 1rem;
                    border-radius: 16px;
                }

                .service-detail-header {
                    padding: 2rem 1.5rem 1rem;
                }

                .service-detail-body {
                    padding: 0 1.5rem 1.5rem;
                }
            }

            @@media (max-width: 576px) {
                .service-meta {
                    flex-direction: column;
                    gap: 8px !important;
                }
            }
        }
    </style>
}

<div class="service-detail-container">
    <div class="container">
        <div class="service-detail-card">
            <div class="service-detail-header">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (!ViewContext.HttpContext.Request.Method.Equals("GET", StringComparison.OrdinalIgnoreCase) && !ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <h1 class="service-detail-title">Детайли за услугата</h1>
            </div>

            <div class="service-detail-body">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="service-image-container">
                        <img src="@Model.ImagePath" 
                             alt="@Model.NameService" 
                             class="service-image"
                             onerror="this.parentElement.innerHTML='<div class=&quot;service-image-error&quot;><div class=&quot;text-center&quot;><i class=&quot;fas fa-image&quot;></i><br>Изображението не може да бъде заредено</div></div>'">
                    </div>
                }

                <dl class="service-detail-dl">
                    <dt>Име на услугата:</dt>
                    <dd>@Html.DisplayFor(model => model.NameService)</dd>

                    <dt>Категория:</dt>
                    <dd>@Html.DisplayFor(model => model.CategoryOfService)</dd>

                    <dt>Цена:</dt>
                    <dd>
                        <div class="price-display">
                            <i class="fas fa-money-bill-alt me-1"></i>
                            <span>@Model.Price.ToString("0.00") €</span>
                        </div>
                    </dd>

                    <dt>Описание:</dt>
                    <dd>@Html.Raw(Model.Description)</dd>
                </dl>

                @if (user != null)
                {
                    <div class="reservation-section">
                        @if (Model.CategoryOfService.ToLower() == "астрология")
                        {
                            <h3 class="reservation-title">Резервация за астрологична консултация</h3>
                            <form id="reservationForm" method="post" action="/Services/CreateReservation" class="mx-auto" style="max-width: 500px;">
                                <input type="hidden" name="ServiceId" value="@Model.Id"/>
                                <div class="mb-3">
                                    <label for="astrologicalDate" class="form-label">Дата и час на раждане</label>
                                    <input type="datetime-local" id="astrologicalDate" name="astrologicalDate" class="form-control" required/>
                                </div>
                                <div class="mb-3">
                                    <label for="birthCity" class="form-label">Град на раждане</label>
                                    <input type="text" id="birthCity" name="birthCity" class="form-control" required placeholder="Въведете града, в който сте родени"/>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-service">
                                        <i class="fas fa-calendar-check me-2"></i> Резервирай
                                    </button>
                                </div>
                            </form>
                        }
                        else
                        {
                            <h3 class="reservation-title">Изберете дата и час</h3>
                            <div class="mb-3 text-center">
                                <label for="reservationDate" class="form-label">Изберете дата:</label>
                                <input type="date" id="reservationDate" class="form-control mx-auto" style="max-width: 250px;"
                                       min="@DateTime.Today.ToString("yyyy-MM-dd")">
                            </div>

                            <div id="timeSlotsContainer" class="text-center hidden">
                                <h5 class="mb-3">Свободни часове:</h5>
                                <div id="timeSlots" class="flex flex-wrap justify-center gap-2 mb-4"></div>
                            </div>

                            <div id="errorMessage" class="alert alert-danger text-center hidden mt-3"></div>

                            <form id="timeReservationForm" method="post" action="/Services/CreateReservation" class="hidden text-center">
                                <input type="hidden" name="ServiceId" value="@Model.Id"/>
                                <input type="hidden" id="selectedReservationDate" name="reservationDate"/>
                                <input type="hidden" id="selectedReservationTime" name="reservationTime"/>
                                <button type="submit" id="confirmReservationBtn" class="btn btn-service">
                                    <i class="fas fa-calendar-check me-2"></i> Потвърди резервация
                                </button>
                            </form>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center mt-4" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">
                        <div class="d-flex flex-column align-items-center">
                            <p class="mb-3 text-white">За да резервирате услуга, моля влезте в профила си.</p>
                            <a asp-area="Identity" asp-page="/Account/Login"
                               class="btn px-4 py-2 fw-bold text-white"
                               style="border-radius: 25px;">
                                <i class="fas fa-sign-in-alt me-2"></i> Вход
                            </a>
                        </div>
                    </div>
                }

                <div class="text-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-service">
                        <i class="fas fa-arrow-left me-2"></i> Обратно към услугите
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const reservationDateInput = document.getElementById("reservationDate");
            const timeSlotsContainer = document.getElementById("timeSlotsContainer");
            const timeSlotsDiv = document.getElementById("timeSlots");
            const errorDiv = document.getElementById("errorMessage");
            const timeReservationForm = document.getElementById("timeReservationForm");
            const selectedDateInput = document.getElementById("selectedReservationDate");
            const selectedTimeInput = document.getElementById("selectedReservationTime");

            if (reservationDateInput) {
                reservationDateInput.addEventListener("change", function() {
                    const selectedDate = this.value;
                    const serviceId = @serviceId;

                    fetch(`/Services/GetAvailableTimes?date=${selectedDate}&serviceId=${serviceId}`)
                        .then(response => response.json())
                        .then(data => {
                            timeSlotsDiv.innerHTML = "";
                            errorDiv.classList.add("hidden");

                            if (!data.success) {
                                errorDiv.textContent = data.message;
                                errorDiv.classList.remove("hidden");
                                timeSlotsContainer.classList.add("hidden");
                                timeReservationForm.classList.add("hidden");
                                return;
                            }

                            if (data.availableTimes.length === 0) {
                                errorDiv.textContent = "Няма свободни часове за избраната дата.";
                                errorDiv.classList.remove("hidden");
                                timeSlotsContainer.classList.add("hidden");
                                timeReservationForm.classList.add("hidden");
                                return;
                            }

                            data.availableTimes.forEach(time => {
                                const button = document.createElement("button");
                                button.type = "button";
                                button.className = "btn btn-outline-service time-slot-btn";
                                button.textContent = time;
                                button.onclick = function() {
                                    document.querySelectorAll('.time-slot-btn').forEach(btn => {
                                        btn.classList.remove('btn-service');
                                        btn.classList.add('btn-outline-service');
                                    });
                                    this.classList.remove('btn-outline-service');
                                    this.classList.add('btn-service');

                                    selectedDateInput.value = selectedDate;
                                    selectedTimeInput.value = time;
                                    timeReservationForm.classList.remove("hidden");
                                };
                                timeSlotsDiv.appendChild(button);
                            });

                            timeSlotsContainer.classList.remove("hidden");
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            errorDiv.textContent = "Възникна грешка при зареждането на часовете.";
                            errorDiv.classList.remove("hidden");
                            timeSlotsContainer.classList.add("hidden");
                            timeReservationForm.classList.add("hidden");
                        });
                });
            }

            if (timeReservationForm) {
                timeReservationForm.addEventListener("submit", function(e) {
                    if (!selectedDateInput.value || !selectedTimeInput.value) {
                        e.preventDefault();
                        alert("Моля, изберете дата и час преди да резервирате.");
                    }
                });
            }

        });
    </script>
}