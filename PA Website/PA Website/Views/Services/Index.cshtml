@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager
@inject RoleManager<IdentityRole> RoleManager
@model IEnumerable<PA_Website.Models.Service>

@{
    ViewData["Title"] = "Услуги";
    var user = await UserManager.GetUserAsync(User);
    var isAdmin = user != null && await UserManager.IsInRoleAsync(user, "Admin");
    Layout = "_Layout";
}

@section Styles {
    <style>
        :root {
            --primary-color: #4a0e78;
            --secondary-color: #6a3093;
            --accent-color: #ffd700;
            --light-bg: #f8f9fa;
            --card-shadow: 0 5px 15px rgba(0,0,0,0.08);
            --hover-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

        .services-page {
            background: var(--light-bg);
            padding: 2rem 0;
            min-height: calc(100vh - 80px);
        }

        .services-container {
            background: white;
            border-radius: 15px;
            box-shadow: var(--card-shadow);
            padding: 1.5rem;
            position: relative;
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .services-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            margin-bottom: 2rem;
            gap: 1rem;
        }

        .page-title {
            color: var(--primary-color);
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
            position: relative;
            padding-bottom: 0.5rem;
        }

            .page-title:after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 60px;
                height: 3px;
                background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            }

        .service-card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: var(--card-shadow);
            height: 100%;
            display: flex;
            flex-direction: column;
            background: white;
            position: relative;
            margin-bottom: 1.5rem;
        }

            .service-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--hover-shadow);
            }

        .service-card-body {
            padding: 1.25rem;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .service-card-title {
            color: var(--primary-color);
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .service-card-category {
            font-size: 0.85rem;
            color: var(--secondary-color) !important;
            margin-bottom: 0.75rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .service-card-text {
            font-size: 0.9rem;
            color: #555;
            margin-bottom: 1rem;
            flex-grow: 1;
        }

        .service-card-footer {
            padding: 0.75rem 1.25rem;
            background: rgba(106, 48, 147, 0.05);
            border-top: 1px solid rgba(106, 48, 147, 0.1);
        }

        .service-meta {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .price-badge {
            background: linear-gradient(135deg, #4a0e78, #6a3093);
            color: white;
            border-radius: 20px;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            font-weight: 500;
            box-shadow: 0 2px 8px rgba(74, 14, 120, 0.2);
            transition: all 0.3s ease;
        }

            .price-badge:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(74, 14, 120, 0.3);
            }

            .price-badge i {
                color: white;
                margin-right: 0.5rem;
                font-size: 0.95rem;
            }

        .btn-service {
            background: var(--primary-color);
            color: white;
            border: none;
            border-radius: 20px;
            padding: 0.5rem 1.25rem;
            font-size: 0.85rem;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-service:hover {
                background: var(--secondary-color);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(74, 14, 120, 0.3);
            }

        .btn-service-outline {
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            border-radius: 20px;
            padding: 0.5rem 1.25rem;
            font-size: 0.85rem;
            transition: all 0.3s;
        }

            .btn-service-outline:hover {
                background: var(--primary-color);
                color: white;
            }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .promo-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #ff4757;
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 10px;
            font-size: 0.7rem;
            font-weight: 500;
            z-index: 1;
            animation: pulse 1.5s infinite;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        .no-services {
            text-align: center;
            padding: 2rem;
            color: var(--secondary-color);
        }

            .no-services i {
                font-size: 2.5rem;
                margin-bottom: 1rem;
                color: #d3d9e8;
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .services-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .page-title {
                font-size: 1.75rem;
            }

            .service-card {
                margin-bottom: 1rem;
            }
        }

        @@media (max-width: 576px) {
            .services-container {
                padding: 1rem;
            }

            .page-title {
                font-size: 1.5rem;
            }

            .action-buttons {
                justify-content: center;
            }

            .service-meta {
                flex-direction: column;
                align-items: flex-start;
            }
        }
    </style>
}

<div class="services-page">
    <div class="container">
        <div class="services-container">
            <div class="services-header">
                <h1 class="page-title">Нашите Услуги</h1>
                @if (isAdmin)
                {
                    <a asp-action="Create" class="btn btn-service">
                        <i class="fas fa-plus me-2"></i>Добави услуга
                    </a>
                }
            </div>

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="service-card">
                                @if (item.Price < 50)
                                {
                                    <div class="promo-badge">
                                        <i class="fas fa-bolt me-1"></i> Промоция
                                    </div>
                                }

                                <div class="service-card-body">
                                    <h5 class="service-card-title">@item.NameService</h5>
                                    <h6 class="service-card-category">@item.CategoryOfService</h6>

                                    <div class="service-meta">
                                        <div class="price-badge">
                                            <i class="fas fa-money-bill-alt me-1"></i>
                                            <span>@item.Price.ToString("0.00") лв.</span>
                                        </div>
                                    </div>

                                    <p class="service-card-text">@item.Description</p>
                                </div>

                                <div class="service-card-footer">
                                    <div class="action-buttons">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-service-outline btn-sm">
                                            <i class="fas fa-info-circle me-1"></i> Детайли
                                        </a>

                                        @if (user != null)
                                        {
                                            @if (item.CategoryOfService.ToLower() == "психология" || item.CategoryOfService.ToLower() == "астрология")
                                            {
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-service btn-sm">
                                                    <i class="fas fa-calendar-check me-1"></i> Резервирай
                                                </a>
                                            }
                                        }
                                        else
                                        {
                                            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Context.Request.Path"
                                               class="btn btn-service btn-sm">
                                                <i class="fas fa-calendar-check me-1"></i> Резервирай
                                            </a>
                                        }

                                        @if (isAdmin)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="no-services">
                    <i class="fas fa-concierge-bell"></i>
                    <h3>Все още няма добавени услуги</h3>
                    @if (isAdmin)
                    {
                        <a asp-action="Create" class="btn btn-service mt-3">
                            <i class="fas fa-plus me-2"></i>Добави първата услуга
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Модал за потвърждение -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Потвърждение на резервация</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Сигурни ли сте, че искате да резервирате тази услуга?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отказ</button>
                <form id="reservationForm" asp-action="Reserve" method="post" style="display: none;">
                    <input type="hidden" id="serviceId" name="serviceId" />
                </form>
                <button type="button" class="btn btn-primary" onclick="submitReservation()">
                    <i class="fas fa-check me-1"></i> Потвърди
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function prepareReservation(serviceId) {
            document.getElementById("serviceId").value = serviceId;
        }

        function submitReservation() {
            document.getElementById("reservationForm").submit();
        }
    </script>
}