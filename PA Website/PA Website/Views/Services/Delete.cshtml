@model PA_Website.Models.Service

@{
    ViewData["Title"] = "Изтрий Услуга";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .delete-container {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: calc(100vh - 80px);
            padding: 2rem 0;
        }

        .delete-card {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 24px;
            box-shadow: 0 20px 40px -10px rgba(124, 58, 237, 0.1);
            overflow: hidden;
            position: relative;
            max-width: 800px;
            margin: 0 auto;
        }

        .delete-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #dc2626, #ef4444);
        }

        .delete-header {
            padding: 2.5rem 2.5rem 1.5rem;
            background: linear-gradient(135deg, #fef2f2, #fee2e2);
            border-bottom: 1px solid rgba(220, 38, 38, 0.1);
            text-align: center;
        }

        .delete-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: #dc2626;
            margin-bottom: 1rem;
            position: relative;
        }

        .delete-title::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #dc2626, #ef4444);
            border-radius: 2px;
        }

        .delete-subtitle {
            color: #991b1b;
            margin-bottom: 0;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .delete-body {
            padding: 2.5rem;
        }

        .warning-section {
            background: linear-gradient(135deg, #fef2f2, #fee2e2);
            border: 2px solid #fecaca;
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .warning-icon {
            font-size: 3rem;
            color: #dc2626;
            margin-bottom: 1rem;
        }

        .warning-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.25rem;
            font-weight: 600;
            color: #991b1b;
            margin-bottom: 0.5rem;
        }

        .warning-text {
            color: #7f1d1d;
            font-size: 0.95rem;
            margin-bottom: 0;
        }

        .service-info {
            background: linear-gradient(135deg, #f8fafc, #f1f5f9);
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .service-info-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.125rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 1rem;
            text-align: center;
        }

        .info-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .info-item {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            padding: 0.75rem;
            background: white;
            border-radius: 12px;
            border: 1px solid rgba(124, 58, 237, 0.1);
        }

        .info-icon {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            border-radius: 8px;
            padding: 0.5rem;
            font-size: 0.875rem;
            min-width: 32px;
            text-align: center;
        }

        .info-content {
            flex: 1;
        }

        .info-label {
            font-weight: 600;
            color: #4c1d95;
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .info-value {
            color: #1f2937;
            font-size: 1rem;
            margin-bottom: 0;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .btn-danger {
            background: linear-gradient(135deg, #dc2626, #ef4444);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 32px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 6px -1px rgba(220, 38, 38, 0.2);
            font-size: 1rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-danger:hover {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(220, 38, 38, 0.4);
        }

        .btn-outline {
            border: 2px solid #4c1d95;
            color: #4c1d95;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: white;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-outline:hover {
            background: linear-gradient(135deg, #4c1d95, #7c3aed);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(124, 58, 237, 0.4);
        }

        @@media (max-width: 768px) {
            .delete-title {
                font-size: 2rem;
            }

            .delete-header,
            .delete-body {
                padding: 1.5rem;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

<div class="delete-container">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="delete-card">
            <div class="delete-header">
                <h1 class="delete-title">Изтрий Услуга</h1>
                <p class="delete-subtitle">Потвърдете изтриването на услугата</p>
            </div>

            <div class="delete-body">
                <div class="warning-section">
                    <div class="warning-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h3 class="warning-title">Внимание!</h3>
                    <p class="warning-text">
                        Това действие е необратимо. След изтриването услугата и всички свързани с нея резервации ще бъдат премахнати завинаги.
                    </p>
                </div>

                <div class="service-info">
                    <h3 class="service-info-title">Информация за услугата</h3>
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-pencil-alt"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Име на услугата</div>
                                <div class="info-value">@Model.NameService</div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-tag"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Категория</div>
                                <div class="info-value">@Model.CategoryOfService</div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-coins"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Цена</div>
                                <div class="info-value">@Model.Price.ToString("0.00") лв.</div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Дата за резервация</div>
                                <div class="info-value">@Model.ReservationDate.ToString("dd.MM.yyyy")</div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-align-left"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Описание</div>
                                <div class="info-value">@Model.Description</div>
                            </div>
                        </div>
                    </div>
                </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
                    <div class="action-buttons">
                        <button type="submit" class="btn-danger">
                            <i class="fas fa-trash"></i>
                            Изтрий услугата
                        </button>
                        <a asp-action="Index" class="btn-outline">
                            <i class="fas fa-arrow-left"></i>
                            Назад към списъка
                        </a>
                    </div>
    </form>
            </div>
        </div>
    </div>
</div>
